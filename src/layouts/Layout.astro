---
import Header from '@/components/Header.astro';
import Navbar from '@/components/Navbar.astro';
import Footer from '@/components/Footer.astro';
import WhatsAppButton from '@/components/WhatsAppButton.astro';
import  {ClientRouter}   from 'astro:transitions'; // lo que era ViewTransition ahora se llama ClientRouter
import '@fontsource-variable/montserrat/wght.css';// Supports weights 100-900
import '@fontsource/roboto/700.css';//Supports 100-300-400-500-700-900-italic
import '@fontsource/roboto/400.css';//Supports 100-300-400


interface Props {
	title: string;
	description?: string;
	keywords?: string;
	image?: string;
	url?: string;
	user?: {
		username: string;
		isAdmin: boolean;
	} | null; //si no lo uso en todos los layouts se coloca ?
	showWhatsAppButton?: boolean;
}


const { title = 'OnThePointService - Servicio Tecnico', 
		description = 'Reparacion de dispositivos electronicos.',
		keywords = 'reparacion de dispositivos de telefonia movil y portatiles laptops, Servicio Tecnico, Apple, iPhone, Mac, iPad, Multi marca, Samsung, Xiaomi, Tcl, Android"',
		image = "https://onthepointservice.com/img/onthepointservice.png",
		url = "https://onthepointservice.com",
		user = Astro.locals.user,
		showWhatsAppButton = true } 
		= Astro.props;

// Definir el esquema JSON-LD para la página web
// Este esquema es para Google y otros motores de búsqueda
const webPageSchema = {
	"@context": "https://schema.org/",
	"@type": "LocalBusiness",
	"url": "https://onthepointservice.com/",
	"name": "OnThePointService - Servicio Tecnico",
	"description": "Reparacion de dispositivos electronicos.",
	"image": "https://i.imgur.com/DzwHSCZ.png",
	"address": {
		"@type": "PostalAddress",
		"streetAddress": "Florida, 537",
		"addressLocality": "Buenos Aires",
		"postalCode": "1005",
		"addressCountry": "AR"
	},
	"telephone": "+54 9 11 2356 0959",
	"openingHours": "Mo-Fr 10:00-19:00",
	"priceRange": "$",
	"geo": {
		"@type": "GeoCoordinates",
		"latitude": -34.60156,
		"longitude": -58.37473
	},
	"knowsAbout": "Reparación de celulares, laptops, tablets, pantallas, baterías, placas lógicas, y más.",
	"servesCuisine": "Reparación de dispositivos electrónicos", 
    "acceptsReservations": "False", 
    "slogan": "Servicio técnico profesional para tus dispositivos"

};

// Convertir el objeto en una cadena JSON
const jsonLdString = JSON.stringify(webPageSchema, null, 2); // null, 2 for pretty-printing

---

<!doctype html>
<html lang="es" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" initiall-scale="1.0" />
		<meta name={description} content={description} />
		<meta name={keywords} content={keywords} />
		<meta name="google-adsense-account" content="ca-pub-1952463626478297">
		<link rel="shortcut icon" href="https://www.onthepointservice.com/img/onthepointservice.png" type="image/png">
		<link rel="canonical" href="https://onthepointservice.com/"/>
		<link rel="icon" type="image/png" href="https://www.onthepointservice.com/img/onthepointservice.png" sizes="16x16" />
		<link rel="preconnect" href="https://fonts.cdnfonts.com" as="font" crossorigin="anonymous" />
		<link rel="preload" href="https://fonts.cdnfonts.com/css/sf-pro-display?display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'">
		<noscript><link rel="stylesheet" href="https://fonts.cdnfonts.com/css/sf-pro-display?display=swap"></noscript>
		<link rel="preload" href="https://unpkg.com/maplibre-gl/dist/maplibre-gl.css" as="style" onload="this.onload=null;this.rel='stylesheet'"/>
		<noscript><link rel="stylesheet" href="https://unpkg.com/maplibre-gl/dist/maplibre-gl.css"></noscript>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<!-- Open Graph (Para Faceebook, Twitter, Instagram, Whastapp etc.) -->
		 <meta property="og:type" content="website" />
		 <meta property="og:title" content={title} />
		 <meta property="og:description" content={description} />
		 <meta property="og:image" content={image} />
		 <meta property="og:url" content={url} />

		 <!-- Twitter -->
		  <meta name="twitter:card" content="summary_large_image" />
		  <meta name="twitter:title" content={title} />
		  <meta name="twitter:description" content={description} />
		  <meta name="twitter:image" content={image} />
		  <ClientRouter />
		  
		<script type="application/ld+json" set:html={jsonLdString}></script>	<!-- JSON-LD para google -->
		<script is:inline type="text/javascript">
			window.Tawk_API = window.Tawk_API || {};
  			window.Tawk_LoadStart = new Date();
		</script>
		<script async src="https://www.googletagmanager.com/gtag/js?id=AW-17275820692"></script>
        <script src="../script/gtag-init.js"></script>
		
		<script defer src="https://unpkg.com/maplibre-gl/dist/maplibre-gl.js"></script>
		<script defer src="https://cdnjs.cloudflare.com/ajax/libs/particlesjs/2.2.2/particles.min.js"></script>	
	</head>
	<body >
		<div class:list={["bg-gradient-to-b",
				"from-[#FEFFFE] via-[#F8F8F8] to-[#F5F5F5]", //FEFFFE COLOR APPLE (Gris)
				"dark:from-blk-gray-dark dark:via-blk-dark dark:to-blk-gray-light",
				]} oncontextmenu="return false">
			<Navbar user={user}/>
			<Header title={title} description={description} user={user}/>
			<main >
				<slot />
			</main>
			<Footer/>
			{showWhatsAppButton && <WhatsAppButton />}
			

		</div>


<script >
	import { initTwakTo } from "@/script/tawkto-init";

	document.addEventListener('astro:page-load', initTwakTo);
</script>




	</body>
</html>




<style is:global>
 @import '../styles/global.css';
</style>
