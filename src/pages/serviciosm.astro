---
import type { Linkservice } from "@/data/layout/links";
import { linksServices } from "@/data/layout/links";
import Linkse from "@/components/Linkse.astro";
import { Image } from "astro:assets";
import Layout from "@/layouts/Layout.astro";
import IcoDoubleCheck from "@/utilities/icons/icoDoubleCheck.astro";
import IcoScrewDriver from "@/utilities/icons/icoScrewDriver.astro";
import IcoHumanFixer from "@/utilities/icons/icoHumanFixer.astro";
// import srcImage from "../utilities/img/macbookimg.png"
import BlurImages from "@/components/BlurImages";


const imgServiciosm = {
    imagenWatch: "https://i.imgur.com/MWqBcoZ.png?format=webp",
    altimagenWatch: "imagenes de relojes apple watch edicion finales del 2023",
    imagenIpads: "https://i.imgur.com/qp7cVtL.png?format=webp",
    altimageIpads: "imagenes de ipads 2024 - 2025",
    imagenImac: "https://i.imgur.com/9CkA3Td.png?format=webp",
    altimageImac: "imagenes de imac 2024 - 2025",
    imagenIphone: "https://i.imgur.com/PH2qZ3V.png?format=webp",
    altIphone: "imagenes de iphones 2024 - 2025",
    imagenMacbook: "https://i.imgur.com/4oYiCkZ.png?format=webp",
    altimagenMacbook: "imagenes de macbook 2023",
    imagenMagsafe: 'https://i.imgur.com/CrJ07C2.png?format=webp',
    altMagsafe: 'imagenes de magsafe cargador macbook',
}

const seoData = {
  title: "Servicios de Reparación Apple - Genius Bar Service",
  description: "Servicio técnico especializado en iPhone, iPad, MacBook, iMac, Apple Watch y MagSafe. Diagnóstico sin costo y garantía de 90 días.",
  keywords: "reparación Apple, servicio técnico iPhone, reparación MacBook, mantenimiento Apple, Genius Bar Argentina, diagnóstico gratis Apple",
  image: "https://i.imgur.com/jLmt4Sc.png?format=webp", 
  user: Astro.locals.user,
  url: "https://geniusbarservice.com/servicios"
};


---


<Layout {...seoData}>
    <div class="flex flex-col gap-8 sections">
        
        <section id="brand_principal_title" class="relative section origin-center ">
           
                <div class="imagen-p bg-imagen-p">
                   
                </div>
                <div class="absolute inset-0 flex flex-col items-center justify-center md:items-start md:left-16">
                    <h1 class="text-4xl md:text-5xl font-apple font-bold text-mainbrand-light text-center mb-4 break-words whitespace-normal  ">Diagnosticos al instante!</h1>
                    <p class="text-mainbrand-light dark:text-mainbrand-light font-apple font-bold text-lg">Sin costo</p>
                    <p class="text-mainbrand-light dark:text-mainbrand-light font-apple font-bold text-lg">Garantizados por 90 días.</p>
                    <p class="text-mainbrand-light dark:text-mainbrand-light font-apple font-bold text-lg">Experiencia de más de 5 años en el sector</p>
                    <a href="/servicedescription" class="text-sky-700 text-xl underline font-bold font-apple">Ver servicios</a>
                </div>    
            
        </section>
    
        <section id="question_basic_problems" class=" flex flex-col md:flex-row items-center section">
            <div class="sectionquest bg-custom-gradientwithimage flex flex-col justify-center items-center gap-y-5 w-full h-full rounded-2xl py-4 overflow-hidden">
                <h1 class="text-3xl md:text-5xl text-mainbrand-light dark:text-mainbrand-light font-apple font-bold text-center">Reparamos Tu Telefono al Momento</h1>
                <div class="flex flex-col md:flex-row items-center gap-y-8">
                    <div class="animate-spin-scale hover:animate-none">
                        <IcoHumanFixer wi="5rem" he="5rem"/>
                    </div>
                    <div class="w-full md:w-1/2 flex items-center justify-center">
                        <Image class=" h-80 sm:h-80 md:h-96 object-contain rounded-lg" width={480} height={270} decoding="async" loading="lazy" src="https://i.imgur.com/iYtVSQG.png" alt="imagen iphonex roto" format="avif" quality={"high"} densities={[1.5, 2]}/>
                    </div>
                        <IcoScrewDriver wi="5rem" he="5rem"/>
                    <Image class="h-80 sm:h-80 md:h-96 object-contain rounded-lg" width={480} height={270} decoding="async" loading="lazy" src="https://i.imgur.com/ag9L3xJ.png"  alt="imagen iphone xsmax reparado" format="avif" quality={"high"} densities={[1.5, 2]} />
                    <div class="animate-spin-scale">      
                        <IcoDoubleCheck wi="5rem" he="5rem"/>
                    </div>
                </div>
    
                <div class="grid grid-cols-2 md:grid-cols-4 place-items-center gap-16 md:gap-32 filter font-apple">
                {linksServices.map((link: Linkservice) => <Linkse {...link} />)}
                </div>
    
            </div>
        </section>
    
        <section id="technical_services" class="bg-gray-esp1 py-12 rounded-2xl section block origin-top">
            <div class="container mx-auto px-10">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8 ">
                    <div class="bg-white rounded-lg drop-shadow-lg overflow-hidden hover:scale-custom2 transition-transform duration-300 ">
                        <div class="flex flex-col md:flex-row md:h-auto">

                            <div class="w-full md:w-1/2 flex items-center justify-center">
                                <div class="aspect-[4/3] w-full">
                                    <BlurImages
                                    client:visible
                                    src={imgServiciosm.imagenIphone}
                                    alt={imgServiciosm.altIphone}
                                    className="w-full h-full object-cover"
                                    />
                                </div>
                            </div>

                            <div class="w-full md:w-1/2 p-6 flex flex-col justify-center">
                                <p class="text-xl font-apple font-semibold text-blackep mb-2 ">Apple IPhone</p>
                                <p class="text-gray-700 font-sans font-medium mb-4">Servicio tecnico para tu IPhone</p>
                                <a href="/serviceiphone" class="font-montserrat font-bold text-sky-600 hover:text-sky-700 ">Mas información</a>
                            </div>
                        </div>
                    </div>
                    <div class="bg-white rounded-lg drop-shadow-lg overflow-hidden hover:scale-custom2 transition-transform duration-300 ">
                        <div class="flex flex-col md:flex-row md:h-auto">
                            
                            <div class="w-full md:w-1/2 flex items-center justify-center">
                                <div class="aspect-[4/3] w-full">
                                    <BlurImages
                                    client:visible
                                    src= {imgServiciosm.imagenWatch}
                                    alt= {imgServiciosm.altimagenWatch}
                                    className="w-full h-full object-cover"
                                    />
                                </div>
                            </div>
                            <div class="w-full md:w-1/2 p-6 flex flex-col justify-center">
                                <p class="text-xl font-apple font-semibold text-blackep mb-2 ">Apple Watch</p>
                                <p class="text-gray-700 font-sans font-medium mb-4">Servicio tecnico para tu Watch Series</p>
                                <a href="" class="font-montserrat font-bold text-sky-600 hover:text-sky-700">Mas información</a>
                            </div>
                        </div>
                    </div>
                    
                    <div class="bg-white rounded-lg drop-shadow-lg overflow-hidden hover:scale-custom2 transition-transform duration-300">
                        <div class="flex flex-col md:flex-row h-auto">
                            <div class="w-full md:w-1/2 flex items-center justify-center">
                                <div class="aspect-[4/3] w-full">    
                                    <BlurImages
                                    client:visible
                                    src= {imgServiciosm.imagenIpads}
                                    alt= {imgServiciosm.altimageIpads}
                                    className="w-full h-full object-cover"
                                    />
                                </div>
                            </div>
                            <div class="w-full md:w-1/2 p-6 flex flex-col justify-center">
                                <p class="text-xl font-apple font-semibold text-blackep mb-2">Apple IPad</p>
                                <p class="text-gray-700 font-sans font-medium mb-4">Servicio tecnico <br>para tus <br>IPads Pro, Air, Mini</p>
                                <a href="" class="font-montserrat font-bold text-sky-600 hover:text-sky-700">Mas información</a>
                            </div>
                        </div>
                   
                </div>
                    <div class="bg-white rounded-lg drop-shadow-lg overflow-hidden hover:scale-custom2 transition-transform duration-300">
                        <div class="flex flex-col md:flex-row h-auto">

                            <div class="w-full md:w-1/2 flex items-center justify-center">
                                <div class="aspect-[4/3] w-full">
                                    <BlurImages
                                    client:visible
                                    src= {imgServiciosm.imagenMacbook}
                                    alt= {imgServiciosm.altimagenMacbook}
                                    className="w-full h-full object-cover"
                                    />
                                </div>
                            </div>
                            <div class="w-full md:w-1/2 p-6 flex flex-col justify-center">
                                <p class="text-xl font-apple font-semibold text-blackep mb-2">Apple MacBook</p>
                                <p class="text-gray-700 font-sans font-medium mb-4">Servicio tecnico para tu Macbook o Macbook Pro Series</p>
                                <a href="" class="font-montserrat font-bold text-sky-600 hover:text-sky-700">Mas información</a>
                            </div>
                        </div>
                    </div>
                    <div class="bg-white rounded-lg drop-shadow-lg overflow-hidden hover:scale-custom2 transition-transform duration-300">
                        <div class="flex flex-col md:flex-row h-auto">
                            <div class="w-full md:w-1/2 flex items-center justify-center">

                                <div class="aspect-[4/3] w-full">
                                    <BlurImages
                                    client:visible
                                    src={imgServiciosm.imagenImac}
                                    alt={imgServiciosm.altimageImac}
                                    className="w-full h-full object-cover"
                                    />
                                </div>
                            </div>
              
                            <div class="w-full md:w-1/2 p-6 flex flex-col justify-center">
                                <p class="text-xl font-apple font-semibold text-blackep mb-2">Apple IMac</p>
                                <p class="text-gray-700 font-sans font-medium mb-4">Servicio tecnico para tu IMac</p>
                                <a href="" class="font-montserrat font-bold text-sky-600 hover:text-sky-700">Mas información</a>
                            </div>
                    </div>
                </div>
                    <div class="bg-white rounded-lg drop-shadow-lg overflow-hidden hover:scale-custom2 transition-transform duration-300">
                        
                        <div class="flex flex-col md:flex-row h-auto">

                            <div class="w-full md:w-1/2 flex items-center justify-center">
                                    <div class="aspect-[4/3] w-full">
                                        <BlurImages
                                        client:visible
                                        src={imgServiciosm.imagenMagsafe}
                                        alt={imgServiciosm.altMagsafe}
                                        className="w-full h-full object-cover"
                                        />
                                    </div>
                            </div>
                            <div class="w-full md:w-1/2 p-6 flex flex-col justify-center">
                                <p class="text-xl font-apple font-semibold text-blackep mb-2">Apple MagSafe</p>
                                <p class="text-gray-700 font-sans font-medium mb-4">Servicio tecnico para tu Fuente Magsafe</p>
                                <a href="" class="font-montserrat font-bold text-sky-600 hover:text-sky-700">Mas información</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    
    <section id="help-bar" class="flex justify-center section">
        <a href='/formservice' id="experthelp">

            <div class="atention-guys bg-custom-atention-guys-img flex justify-center items-end bg-blk-gray-light cursor-pointer hover:drop-shadow-custom hover:scale-custom2 hover:bg-white/90 transition-all duration-300 transform rounded-2xl btn-ghost">
                <div class="flex flex-col text-center mb-12 ">
                    <p class="text-3xl md:text-4xl text-mainbrand-light dark:text-mainbrand-light font-apple font-bold">Atención con expertos</p>
                    <p class="text-mainbrand-light dark:text-mainbrand-light font-apple font-bold text-auto md:text-2xl trans">Nuestros profesionales estan a tu disposición para resolver tus problemas</p>
                </div>
            </div>
        </a>
    </section>
    </div>
</Layout>

<script>
    import { observers, observerBounce } from "@/script/observer";

    document.addEventListener('astro:page-load', () => {
        observers();
        observerBounce('imagen-p','brand_principal_title', 'animate-bounce');
    })

    document.getElementById('experthelp')?.addEventListener('click', function(e) {
        e.preventDefault();
        window.history.pushState({}, '', '/expert-help');
        window.location.href = '/formservice';
        
    })
</script>

<style>
    .img-class{
        filter: drop-shadow(5px 5px 8px #000000);
    }
</style>