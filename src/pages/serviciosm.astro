---
import type { Linkservice } from "@/data/layout/links";
import { linksServices } from "@/data/layout/links";
import Linkse from "@/components/Linkse.astro";
import { Image } from "astro:assets";
import Layout from "@/layouts/Layout.astro";
import IcoDoubleCheck from "@/utilities/icons/icoDoubleCheck.astro";
import IcoScrewDriver from "@/utilities/icons/icoScrewDriver.astro";
import IcoHumanFixer from "@/utilities/icons/icoHumanFixer.astro";
import srcImage from "../utilities/img/macbookimg.png"
//import macbookimg from "@/utilities/img/macbookimg.png" //esta importacion es desde la utilities dentro de src

/**<Image class="img-class2" width={480} height={270} src="/img/imac.png" alt="imagenes de Imac 2023"> este src es desde la carpeta public*/

const imagenPrincipal = "https://i.imgur.com/4Dfhwxq.jpg"
const imagenWatch = "https://i.imgur.com/MWqBcoZ.png"
const imagenIpads = "https://i.imgur.com/qp7cVtL.png"
const imagenMacbook = "https://i.imgur.com/4oYiCkZ.png"
const imagenImac = "https://i.imgur.com/9CkA3Td.png"

const user = Astro.locals.user;
console.log(user)
---


<Layout title="Servicios 📱 Genius Bar">
    <div class="flex flex-col gap-8 sections">
        
        <section id="brand_principal_title" class="relative section origin-center ">
           
                <div class="imagen-p bg-imagen-p">
                   
                </div>
                <div class="absolute inset-0 flex flex-col items-center justify-center md:items-start md:left-16">
                    <h1 class="text-5xl font-sans font-bold text-white text-center mb-4 ">Diagnosticos al instante!</h1>
                    <p class="text-black dark:text-white font-apple font-bold text-lg">Sin costo</p>
                    <p class="text-black dark:text-white font-apple font-bold text-lg">Garantizados por 90 días.</p>
                    <p class="text-black dark:text-white font-apple font-bold text-lg">Experiencia de más de 5 años en el sector</p>
                    <a href="/servicedescription" class="text-sky-600 underline font-semibold font-apple">Ver servicios</a>
                </div>    
            
        </section>
    
        <section id="question_basic_problems" class=" flex flex-col md:flex-row items-center section">
            <div class="sectionquest bg-custom-gradientwithimage flex flex-col justify-center items-center gap-y-5 w-full h-full rounded-2xl py-4 overflow-hidden">
                <h1 class="text-5xl dark:text-white font-apple font-bold text-center">Reparamos Tu Telefono al Momento</h1>
                <div class="flex flex-col md:flex-row items-center gap-y-8">
                    <div class="animate-spin-scale hover:animate-none">
                        <IcoHumanFixer wi="5rem" he="5rem"/>
                    </div>
                    <Image class="img-class" inferSize={true} src="https://i.imgur.com/iYtVSQG.png" alt="imagen iphonex roto" format="avif" quality={"high"} densities={[1.5, 2]}/>
                        <IcoScrewDriver wi="5rem" he="5rem"/>
                    <Image class="img-class" inferSize={true} src="https://i.imgur.com/ag9L3xJ.png"  alt="imagen iphone xsmax reparado" format="avif" quality={"high"} densities={[1.5, 2]} />
                    <div class="animate-spin-scale">      
                        <IcoDoubleCheck wi="5rem" he="5rem"/>
                    </div>
                
                </div>
    
                <div class="grid grid-cols-2 md:grid-cols-4 place-items-center gap-16 md:gap-32 filter font-apple">
                {linksServices.map((link: Linkservice) => <Linkse {...link} />)}
                </div>
    
            </div>
        </section>
    
        <section id="technical_services" class="bg-gray-esp1 py-12 rounded-2xl section block origin-top">
            <div class="container mx-auto px-10">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <div class="bg-white rounded-lg drop-shadow-lg overflow-hidden hover:scale-custom2 transition-transform duration-300">
                        <div>
                            <Image class="img-class2" width={480} height={270} src={imagenWatch} alt="imagenes de relojes apple watch edicion finales del 2023" format="avif" quality={"high"} densities={[1.5, 2]}>
                        </div>
                        <div class="p-6">
                            <p class="text-xl font-apple font-semibold text-blackep mb-2 ">Apple Watch</p>
                            <p class="text-gray-700 font-sans font-medium mb-4">Servicio tecnico para tu Watch Series</p>
                            <a href="" class="text-sky-600 hover:text-sky-700">Mas información</a>
                        </div>
                    </div>
                    <div class="bg-white rounded-lg drop-shadow-lg overflow-hidden hover:scale-custom2 transition-transform duration-300">
                        <div>
                            <Image class="img-class2" inferSize={true} src={imagenIpads} alt="imagenes de ipads de finales de 2023" format="avif" quality={"high"} densities={[1.5, 2]}>
                        </div>
                        <div class="p-6">
                            <p class="text-xl font-apple font-semibold text-blackep mb-2">Apple IPad</p>
                            <p class="text-gray-700 font-sans font-medium mb-4">Servicio tecnico para tus IPads Pro, Air, Mini</p>
                            <a href="" class="text-sky-600 hover:text-sky-700">Mas información</a>
                        </div>
                    </div>
                    
                    <div class="bg-white rounded-lg drop-shadow-lg overflow-hidden hover:scale-custom2 transition-transform duration-300">
                        <div>
                            <Image class="img-class2" width={480} height={270} src={srcImage} alt="imagenes de macbook 2023" format="avif" quality={"high"}   widths={[240, 480, 720, srcImage.width]}
                            sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${srcImage.width}px`}>
            </div>
                        <div class="p-6">
                            <p class="text-xl font-apple font-semibold text-blackep mb-2">Apple MacBook</p>
                            <p class="text-gray-700 font-sans font-medium mb-4">Servicio tecnico para tu Macbook o Macbook Pro Series</p>
                            <a href="" class="text-sky-600 hover:text-sky-700">Mas información</a>
                        </div>
                    </div>
                    <div class="bg-white rounded-lg drop-shadow-lg overflow-hidden hover:scale-custom2 transition-transform duration-300">
                        <div>
                            <Image class="img-class2" inferSize={true} src={imagenImac} alt="imagenes de Imac 2023" format="avif" quality={"high"} densities={[1.5, 2]} decoding={"async"} loading={"lazy"}>
                                <!-- https://i.imgur.com/9CkA3Td.png -->
                        </div>
                        <div class="p-6">
                            <p class="text-xl font-apple font-semibold text-blackep mb-2">Apple IMac</p>
                            <p class="text-gray-700 font-sans font-medium mb-4">Servicio tecnico para tu IMac</p>
                            <a href="" class="text-sky-600 hover:text-sky-700">Mas información</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    
    <section id="help-bar" class="flex justify-center section">
        <a href='/formservice' id="experthelp">

            <div class="atention-guys bg-custom-atention-guys-img flex justify-center items-end bg-blk-gray-light cursor-pointer hover:drop-shadow-custom hover:scale-custom2 hover:bg-white/90 transition-all duration-300 transform rounded-2xl btn-ghost">
                <div class="flex flex-col text-center mb-12 ">
                    <p class="text-4xl dark:text-white font-apple font-bold">Atención con expertos</p>
                    <p class="text-black dark:text-white font-apple font-bold  text-2xl trans">Nuestros profesionales estan a tu disposición para resolver tus problemas</p>
                </div>
            </div>
        </a>
    </section>
    </div>
</Layout>

<script>
    import { observers, observerBounce } from "@/script/observer";

    document.addEventListener('astro:page-load', () => {
        observers();
        observerBounce('imagen-p','brand_principal_title', 'animate-bounce');
    })

    document.getElementById('experthelp')?.addEventListener('click', function(e) {
        e.preventDefault();
        window.history.pushState({}, '', '/expert-help');
        window.location.href = '/formservice';
        
    })
</script>

<style>
    .img-class{
        width: 400px;
        height: 350px;
        object-fit: contain;
        filter: drop-shadow(5px 5px 8px #000000);
    }

    .img-class2{
        width: 100%;
        height: 400px;
        object-fit: contain;
        object-position: center;
        filter: drop-shadow(5px 5px 8px #000000);
    }
</style>