---
import Layout from "@/layouts/Layout.astro";
import IcoAtom from "@/utilities/icons/icoAtom.astro";
import { turdb } from "../../db/turso";
import { sha256 } from "oslo/crypto";
import { encodeHex } from "oslo/encoding";

// 1. Obtener el token de la URL
const token = Astro.url.searchParams.get("token");
const error = Astro.url.searchParams.get("error");
let pageError = "";
let isTokenValid = false;

if (!token) {
  pageError = "Falta el token de restablecimiento.";
} else {
  // 2. Validar el token en el servidor
  try {
    const tokenHash = encodeHex(await sha256(new TextEncoder().encode(token)));
    const { rows: [tokenEntry] } = await turdb.execute({
      sql: "SELECT expires_at FROM PasswordResetToken WHERE token_hash = ?",
      args: [tokenHash],
    });

    if (!tokenEntry) {
      pageError = "El enlace de restablecimiento es inválido.";
    } else {
      const expiresAt = new Date(tokenEntry.expires_at as string).getTime();
      if (Date.now() > expiresAt) {
        pageError = "El enlace de restablecimiento ha expirado. Por favor, solicita uno nuevo.";
      } else {
        isTokenValid = true;
      }
    }
  } catch (e) {
    console.error(e);
    pageError = "Ocurrió un error al validar el enlace.";
  }
}

if (error === "password_mismatch") {
    pageError = "Las contraseñas no coinciden.";
} else if (error === "password_too_short") {
    pageError = "La contraseña debe tener al menos 6 caracteres.";
}

const seoData = {
  title: "Restablecer Contraseña - OnthePointService",
  description: "Crea una nueva contraseña para tu cuenta.",
  noIndex: true,
}
---

<Layout {...seoData}>
  <section class="">
    <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto lg:py-0">
      <a href="/" class="flex items-center mb-6 text-2xl font-semibold text-gray-900 dark:text-white">
        <IcoAtom wi="3rem" he="3rem"/>
        OnthePointService Accesos
      </a>
      <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
        <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
          <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
            Crea una nueva contraseña
          </h1>

          {pageError && <div class="p-4 text-sm text-red-700 bg-red-100 rounded-lg dark:bg-red-200 dark:text-red-800" role="alert">{pageError}</div>}

          {isTokenValid && (
            <form class="space-y-4 md:space-y-6" method="POST" action="/api/reset-password">
              <input type="hidden" name="token" value={token} />
              <div>
                <label for="password" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Nueva Contraseña</label>
                <input type="password" name="password" id="password" placeholder="••••••••" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" required />
              </div>
              <div>
                <label for="confirm-password" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Confirmar Contraseña</label>
                <input type="password" name="confirm-password" id="confirm-password" placeholder="••••••••" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" required />
              </div>
              <button type="submit" class="w-full text-white bg-sky-esp focus:ring-4 focus:outline-none focus:ring-sky-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">
                Restablecer Contraseña
              </button>
            </form>
          )}
        </div>
      </div>
    </div>
  </section>
</Layout>
