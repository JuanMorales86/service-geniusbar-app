---
import Layout from "../layouts/Layout.astro";

const seoData = {
    title: "404 Not Found - Genius Bar Service",
    description: "Pagina no encontrada. Si crees que esto es un error, por favor contacta al soporte.",
    keywords: "404, error, pagina no encontrada, Genius Bar Servicio Tecnico, servicio técnico Apple",
    image: "https://i.imgur.com/DGwX45I.png?format=webp",
    url: "https://geniusbarserviciotecnico.com/404",

}

---



<Layout {...seoData}>
 
    <div class="page-container">
      <!-- <Matrix /> -->
      <div class="video-background">
        <img class="iframe" src="https://midu.dev/images/this-is-fine-404.gif" alt="Error image gif">

      </div>
      <div class="content">
        <h1 class="font-sans font-bold">404</h1>
        <p class="text-lg font-apple">Página no encontrada</p>
      </div>
    </div>
  
</Layout>

<style>
    .page-container{
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        position: relative;
    }

    .video-background{
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
    }

    .video-background:before,
  .video-background:after {
    content: "";
    position: absolute;
    left: 0;
    width: 100%;
    height: 20%;
    z-index: 1;
  }

  .video-background:before {
    top: 0;
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0));
  }

  .video-background:after {
    bottom: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0));
  }

    .video-background .iframe{
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0.6;
    }


    .content{
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        position: relative;
        z-index: 1;
        padding: 2rem;
        text-align: center;

        & h1{
            font-size: 5rem;
        }

        & p{
            font-size: 1.5rem;
        }
    }



   

</style>
